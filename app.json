{
  "name": "MMM",
  "description": "Market Making Machine for Veil",
  "website": "https://veil.co",
  "repository": "https://github.com/mcgingras/Deploy_MMM",
  "logo": "https://veil.co/static/logo-blue.png",
  "scripts": {
    "release": "node loadenv.js"
  },
  "addons": ["mongolab"],
  "env": {
    "MNEMONIC": {
      "description": "Your ethereum wallet's mnumonic",
      "required": "true"
    },
    "ADDRESS": {
      "description": "Your ethereum wallet's address",
      "required": "true"
    },
    "API_URL": {
      "description": "Which Veil instance? Mainnet or Kovan?",
      "value": "https://api.kovan.veil.co"
    }
  }
}
